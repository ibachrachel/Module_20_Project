-- Creating tables for Life_ExpectancyDB

CREATE TABLE Handwashing (
     country VARCHAR(40) NOT NULL,
     year_ int NOT NULL,
	 total_perc int NOT NULL,
     PRIMARY KEY (country),
     UNIQUE (total_perc)
);

CREATE TABLE DrinkingWater (
	 year_ DATE NOT NULL,
     country VARCHAR NOT NULL,
     total_perc INT NOT NULL,
     PRIMARY KEY (country)
);

CREATE TABLE Santiation (
	 year_ DATE NOT NULL,
     country VARCHAR NOT NULL,
     total_perc INT NOT NULL,
     PRIMARY KEY (country)
);

CREATE TABLE unsafeWASH (
  	 year_ DATE NOT NULL,
     country VARCHAR NOT NULL,
     morality_perc int NOT NULL,
	 PRIMARY KEY (country)
);

SELECT * FROM drinkingwater; 